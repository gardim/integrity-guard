{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true
  },
  "include": [
    "src/swagger-output.json",
    "src/**/*.ts",
     "src/api.ts"
    ],
  "types": [
    "node",
    "jest"
  ],  
  "exclude": ["node_modules"]
}
